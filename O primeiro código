		    printf("1: Sobre as escolas.\n2: Sobre esse mundo.\n3: Sobre os atributos magicos.\n4: Nao tenho nenhuma duvida.\n");
		    scanf("%d",&m);
		if(m==1)
		{
			printf("As escolas de magia servem para voce aprender a como catalizar a sua energia esperitual.\nElas surgiram de anos de estudos e avancos magicos de nobres magos.\n");
			printf("Hoje em dia, caso queira viver em nossa sociedade e fundamental aprender a manipular a sua energia esperitual.");
		}
		if(m==2)
		{
			printf("O mundo de Farfalia e habitado por diversos tipos de racas como anoes, elfos, orcs e humanos.\n");
			printf("Depois de anos de guerras entre as racas chegamos a uma epoca de paz entre as racas.\nOs humanos, elfos e anoes fizeram uma alianca para se juntar contra os orcs anos atras.\n");
			printf("Atualmentes os orcs andam")
		}
		}
}
